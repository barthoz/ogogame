<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
     <!-- Your IDE now tells you that one <screen></screen> element is expected here, etc. -->
    
    <useControls filename="nifty-default-controls.xml" />
  <useStyles filename="nifty-default-styles.xml" />
    
    <screen id="hud" controller="main.game.gui.HudController">
        
    </screen>
  
    <screen id="feedMenu" controller="main.game.gui.FeedMenuController">
        
        <layer id="layer1" backgroundColor="#0000" childLayout="vertical">
            <panel id="panel_actions0" height="20%" width="25%" align="right" valign="bottom" backgroundColor="#ffffff" childLayout="center" visibleToMouse="true">
                <control name="button" label="Feed 1 food" id="FeedCreature1" align="center" valign="center" visibleToMouse="true" >
                    <interact onClick="feedCreature(1)"/>
                </control>
            </panel>
            <panel id="panel_actions1" height="20%" width="25%" align="right" valign="bottom" backgroundColor="#ffffff" childLayout="center" visibleToMouse="true">
                <control name="button" label="Feed 2 food" id="FeedCreature2" align="center" valign="center" visibleToMouse="true" >
                    <interact onClick="feedCreature(2)"/>
                </control>
            </panel>
            <panel id="panel_actions2" height="20%" width="25%" align="right" valign="bottom" backgroundColor="#ffffff" childLayout="center" visibleToMouse="true">
                <control name="button" label="Feed 3 food" id="FeedCreature3" align="center" valign="center" visibleToMouse="true" >
                    <interact onClick="feedCreature(3)"/>
                </control>
            </panel>
            <panel id="panel_actions3" height="20%" width="25%" align="right" valign="bottom" backgroundColor="#ffffff" childLayout="center" visibleToMouse="true">
                <control name="button" label="Feed 4 food" id="FeedCreature4" align="center" valign="center" visibleToMouse="true" >
                    <interact onClick="feedCreature(4)"/>
                </control>
            </panel>
            <panel id="panel_actions4" height="20%" width="25%" align="right" valign="bottom" backgroundColor="#ffffff" childLayout="center" visibleToMouse="true">
                <control name="button" label="Cancel" id="CancelFeedMenu" align="center" valign="center" visibleToMouse="true" >
                    <interact onClick="cancel()"/>
                </control>
            </panel>
        </layer>
    </screen>
  
  
  
  <screen id="spawnMenu" controller="main.game.gui.SpawnMenuController">
      
              <layer id="background" childLayout="center">
            <image filename="Interface/loading.jpg"
                   valign="center" align="center" height="100%" width="75%">
            </image>
        </layer>
         
        <layer id="foreground" childLayout="vertical">
            <panel id="spawn_landCreature_menu" height="30%" width="75%" align="center" valigng="top" childLayout="horizontal" visibleToMouse="true">
                
                <panel id="spawn_landCreature" height="100%" width="20%" align="center" valign="top" childLayout="center" visibleToMouse="true">
                    <control name="button" label="Buy" id="SpawnCreatureLand" align="center" valign="center" visibleToMouse="true" >
                        <interact onClick="spawnCreature(Creature-Land)"/>
                    </control>
                </panel>
                <panel id="LandCreature_image" height="100%" width="35%" align="center" valign="top" childLayout="center" visibleToMouse="true">
                    <image filename="Interface/land.png" 
                           valign="center" align="center" >
                    </image>
                </panel>
                
                <panel id="Land_food_display" height="100%" width="45%" align="center" valign="top" childLayout="horizontal" visibleToMouse="true">
                    
                <panel id="Land_food_quantity" height="100%" width="20%" align="center" valign="top" childLayout="center" visibleToMouse="true">
                    <control name="label" text="x2 (should be image)" />
                </panel>
                <panel id="Land_food_image" height="100%" width="80%" align="center" valign="top" childLayout="center" visibleToMouse="true">
                    <image filename="Interface/land_food.png" height="128px" width="128px"
                           valign="center" align="center" >
                    </image>
                </panel>
                </panel>
            </panel>
            
            <panel id="spawn_seaCreature_menu" height="30%" width="75%" align="center" valigng="top" childLayout="horizontal" visibleToMouse="true">
                
                <panel id="spawn_seaCreature" height="100%" width="20%" align="center" valign="top" childLayout="center" visibleToMouse="true">
                    <control name="button" label="Buy" id="SpawnCreatureSea" align="center" valign="center" visibleToMouse="true" >
                        <interact onClick="spawnCreature(Creature-Sea)"/>
                    </control>
                </panel>
                <panel id="SeaCreature_image" height="100%" width="35%" align="center" valign="top" childLayout="center" visibleToMouse="true">
                    <image filename="Interface/sea.png"
                           valign="center" align="center" >
                    </image>
                </panel>
                
                <panel id="Sea_food_display" height="100%" width="45%" align="center" valign="top" childLayout="horizontal" visibleToMouse="true">
                    
                <panel id="Sea_food_quantity" height="100%" width="20%" align="center" valign="top" childLayout="center" visibleToMouse="true">
                    <control name="label" text="x3 (should be image)" />
                </panel>
                <panel id="Sea_food_image" height="100%" width="80%" align="center" valign="top" childLayout="center" visibleToMouse="true">
                    <image filename="Interface/land_food.png" height="128px" width="128px"
                           valign="center" align="center" >
                    </image>
                </panel>
                </panel>
            </panel>
            
            <panel id="spawn_airborneCreature_menu" height="30%" width="75%" align="center" valigng="top" childLayout="horizontal" visibleToMouse="true">
                
                <panel id="spawn_airborneCreature" height="100%" width="20%" align="center" valign="top" childLayout="center" visibleToMouse="true">
                    <control name="button" label="Buy" id="SpawnCreatureAirborne" align="center" valign="center" visibleToMouse="true" >
                        <interact onClick="spawnCreature(Creature-Airborne)"/>
                    </control>
                </panel>
                <panel id="AirborneCreature_image" height="100%" width="35%" align="center" valign="top" childLayout="center" visibleToMouse="true">
                    <image filename="Interface/air.png"
                           valign="center" align="center" >
                    </image>
                </panel>
                
                <panel id="Airborne_food_display" height="100%" width="45%" align="center" valign="top" childLayout="horizontal" visibleToMouse="true">
                    
                <panel id="Airborne_food_quantity" height="100%" width="20%" align="center" valign="top" childLayout="center" visibleToMouse="true">
                    <control name="label" text="x5 (should be image)" />
                </panel>
                <panel id="Airborne_food_image" height="100%" width="80%" align="center" valign="top" childLayout="center" visibleToMouse="true">
                    <image filename="Interface/land_food.png" height="128px" width="128px"
                           valign="center" align="center" >
                    </image>
                </panel>
                </panel>
            </panel>
            
            <panel id="cancel" height="10%" width="75%" align="center" valign="center"  childLayout="center" visibleToMouse="true">
                <control name="button" label="Go Back" id="Cancel" align="center" valign="center" visibleToMouse="true" >
                    <interact onClick="cancel()"/>
                </control>
            </panel>          
        </layer>
  </screen>
</nifty>