<?xml version="1.0" encoding="UTF-8"?>
<nifty xmlns="http://nifty-gui.sourceforge.net/nifty-1.3.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://nifty-gui.sourceforge.net/nifty-1.3.xsd http://nifty-gui.sourceforge.net/nifty-1.3.xsd">
     <!-- Your IDE now tells you that one <screen></screen> element is expected here, etc. -->
    
    <useControls filename="nifty-default-controls.xml" />
  <useStyles filename="nifty-default-styles.xml" />
    
    <screen id="hud" controller="main.game.gui.HudController">
        
    </screen>
  
    <screen id="feedMenu" controller="main.game.gui.FeedMenuController">
        <layer id="layer1" backgroundColor="#0000" childLayout="vertical">
            <panel id="panel_actions0" height="20%" width="25%" align="right" valign="bottom" backgroundColor="#ffffff" childLayout="center" visibleToMouse="true">
                <control name="button" label="Feed 1 food" id="FeedCreature1" align="center" valign="center" visibleToMouse="true" >
                    <interact onClick="feedCreature(1)"/>
                </control>
            </panel>
            <panel id="panel_actions1" height="20%" width="25%" align="right" valign="bottom" backgroundColor="#ffffff" childLayout="center" visibleToMouse="true">
                <control name="button" label="Feed 2 food" id="FeedCreature2" align="center" valign="center" visibleToMouse="true" >
                    <interact onClick="feedCreature(2)"/>
                </control>
            </panel>
            <panel id="panel_actions2" height="20%" width="25%" align="right" valign="bottom" backgroundColor="#ffffff" childLayout="center" visibleToMouse="true">
                <control name="button" label="Feed 3 food" id="FeedCreature3" align="center" valign="center" visibleToMouse="true" >
                    <interact onClick="feedCreature(3)"/>
                </control>
            </panel>
            <panel id="panel_actions3" height="20%" width="25%" align="right" valign="bottom" backgroundColor="#ffffff" childLayout="center" visibleToMouse="true">
                <control name="button" label="Feed 4 food" id="FeedCreature4" align="center" valign="center" visibleToMouse="true" >
                    <interact onClick="feedCreature(4)"/>
                </control>
            </panel>
            <panel id="panel_actions4" height="20%" width="25%" align="right" valign="bottom" backgroundColor="#ffffff" childLayout="center" visibleToMouse="true">
                <control name="button" label="Cancel" id="CancelFeedMenu" align="center" valign="center" visibleToMouse="true" >
                    <interact onClick="cancel()"/>
                </control>
            </panel>
        </layer>
    </screen>
  
  <screen id="spawnMenu" controller="main.game.gui.SpawnMenuController">
        <layer id="layer1" backgroundColor="#0000" childLayout="vertical">
            <panel id="spawn_landCreature" height="25%" width="25%" align="center" valign="top" backgroundColor="#ffffff" childLayout="center" visibleToMouse="true">
                <control name="button" label="Spawn land creature (costs .. food)" id="SpawnCreatureLand" align="center" valign="center" visibleToMouse="true" >
                    <interact onClick="spawnCreature(Creature-Land)"/>
                </control>
            </panel>
            
            <panel id="spawn_seaCreature" height="25%" width="25%" align="center" valign="center" backgroundColor="#ffffff" childLayout="center" visibleToMouse="true">
                <control name="button" label="Spawn sea creature (costs .. food)" id="SpawnCreatureSea" align="center" valign="center" visibleToMouse="true" >
                    <interact onClick="spawnCreature(Creature-Sea)"/>
                </control>
            </panel>
            
            <panel id="spawn_airborneCreature" height="25%" width="25%" align="center" valign="bottom" backgroundColor="#ffffff" childLayout="center" visibleToMouse="true">
                <control name="button" label="Spawn air creature (costs .. food)" id="SpawnCreatureAir" align="center" valign="center" visibleToMouse="true" >
                    <interact onClick="spawnCreature(Creature-Airborne)"/>
                </control>
            </panel>
            
            <panel id="cancel" height="25%" width="25%" align="center" valign="center" backgroundColor="#ffffff" childLayout="center" visibleToMouse="true">
                <control name="button" label="Cancel" id="Cancel" align="center" valign="center" visibleToMouse="true" >
                    <interact onClick="cancel()"/>
                </control>
            </panel>            
        </layer>
  </screen>
</nifty>